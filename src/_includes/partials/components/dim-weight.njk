	<form name="fInputs">
		<div class="dimInputs">
			<div class="unitswitch">
				<input type="checkbox" name="unitswitch" class="unitswitch-checkbox" id="myunitswitch" checked>
				<label class="unitswitch-label" for="myunitswitch">
					<span class="unitswitch-inner"></span>
					<span class="unitswitch-switch"></span>
				</label>
			</div>

			<div class="dimention__input"></div>
				<label for="length">Length</label>
				<input id="length" class="dim_input" title="positive numbers only" type="text" value="100" pattern="^[+]?([.]\d+|\d+[.]?\d*)$">
				<!--   <span class="dimention__input__value">0</span> -->
			</div>

			<div class="dimention__input">
				<label for="width">Width</label>
				<input id="width" class="dim_input" title="positive numbers only" type="text" value="250" pattern="^[+]?([.]\d+|\d+[.]?\d*)$">
				<!--   <span class="dimention__input__value">0</span> -->
			</div>

			<div class="dimention__input">
				<label for="height">Height</label>
				<input id="height" class="dim_input" title="positive numbers only" type="text" value="400" pattern="^[+]?([.]\d+|\d+[.]?\d*)$">
				<!--   <span class="dimention__input__value">0</span> -->
			</div>

			<div class="dimention__input">
				<label for="weight">Weight</label>
				<input id="weight" class="dim_input" title="positive numbers only" type="text" value="400" pattern="^[+]?([.]\d+|\d+[.]?\d*)$">
				<!--   <span class="dimention__input__value">0</span> -->
			</div>
    </div>
    
		
		<div class="balanced-view dim">
      <div class="dim-weight dim-weight-icon"></div>
      <div class="weight-icon"></div>
      <div class="balance"></div>
      <div class="triangle"></div>
    </div>
		<p>Select a dim rate factor:</p>
		<div class="factorTable">
			<span class="input">Factor</span><span class="cm3KG">cm3/KG</span><span class=in3LB>in3/LB</span>
      			<input type="radio" class="dim_input" id="3000" name="factor" value="3000">
      			<label for="3000" data-metric-factor="3000" class="cm3KG" data-imperial-factor="">3000</label><span class=in3LB>83</span>
      		<input type="radio" class="dim_input" id="4000" name="factor" value="4000" >
      			<label for="4000" data-metric-factor="4000" class="cm3KG" data-imperial-factor="">4000</label><span class=in3LB>111</span>
